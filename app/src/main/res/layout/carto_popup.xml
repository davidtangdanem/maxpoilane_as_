<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout 
	    android:layout_width="300dip"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="#fafafa">
	    
	    <!-- HEADER -->
	    <RelativeLayout 
	        android:id="@+id/rl_header"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/ab_solid_light_holo">
	        <Button 
	            android:id="@+id/b_close"
	            android:layout_height="40dip"
	            android:layout_width="40dip"
	            android:background="@drawable/action_close"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true" />
	        <TextView 
	            android:id="@+id/tv_raisonsociale"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Raison Sociale"
	            android:layout_alignParentLeft="true"
	            android:layout_toLeftOf="@id/b_close"
	            android:textSize="18dp"/>   
	    </RelativeLayout>
	    
	    <!-- BODY -->
	    <RelativeLayout 
	        android:id="@+id/rl_body"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">
	        <!-- CONTENT RIGHT -->
	    	<LinearLayout 
	    	    android:id="@+id/ll_body_right"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:orientation="vertical"
	    	    android:layout_alignParentRight="true"
	    	    android:layout_marginRight="20dip">
	    	    <TextView 
	    	        android:id="@+id/tv_codeclient" 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:text="code client : PODUH"/>
	    	    <TextView 
	    	        android:id="@+id/tv_pays" 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:text="FRANCE"/>
	    	</LinearLayout>  
	    	
	    	<!-- CONTENT LEFT -->
	    	<LinearLayout 
	    	    android:id="@+id/ll_body_left"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:orientation="vertical"
	    	    android:layout_alignParentLeft="true"
	    	    android:layout_toLeftOf="@id/ll_body_right"
	    	    android:layout_marginLeft="20dip">
	    	    <TextView 
	    	        android:id="@+id/tv_address1" 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:text="address 1 : "/>
	    	    <TextView 
	    	        android:id="@+id/tv_address2" 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:text="address 2 : "/>
	    	    <TextView 
	    	        android:id="@+id/tv_cp" 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:text="CP: 75015"/>
	    	    <TextView 
	    	        android:id="@+id/tv_ville" 
	    	        android:layout_width="wrap_content"
	    	        android:layout_height="wrap_content"
	    	        android:text="Ville : Paris"/>
	    	</LinearLayout>
	    	
	    	
	    </RelativeLayout>
	    
	    
	    
	    
	    <!-- FOOTER -->
	    <RelativeLayout 
	        android:id="@+id/rl_footer"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/ab_bottom_solid_light_holo">
	        <Button 
	            android:id="@+id/b_call"
	            android:layout_height="40dip"
	            android:layout_width="40dip"
	            android:background="@drawable/action_call"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="15dip"
	            android:layout_marginLeft="15dip"  />
	        
	        <Button 
	            android:id="@+id/b_direction"
	            android:layout_height="40dip"
	            android:layout_width="40dip"
	            android:background="@drawable/action_direction"
	            android:layout_toRightOf="@id/b_call"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="15dip" />
	        
	        
	        <Button 
	            android:id="@+id/b_select"
	            android:layout_height="40dip"
	            android:layout_width="40dip"
	            android:background="@drawable/action_select_client"
	            android:layout_toRightOf="@id/b_direction"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="15dip" />
	        
	        <Button 
	            android:id="@+id/b_mail"
	            android:layout_height="40dip"
	            android:layout_width="40dip"
	            android:background="@drawable/ic_action_info"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="15dip" />
	        
	        
	    </RelativeLayout>
	    
	    
	</LinearLayout>
</RelativeLayout>