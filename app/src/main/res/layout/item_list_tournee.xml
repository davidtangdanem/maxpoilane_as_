<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dip"
    android:paddingBottom="5dip">
    <ImageView 
        android:id="@+id/iv1"
        android:layout_height="50dip"
        android:layout_width="50dip"
        android:background="@drawable/ic_action_info"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    
    
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv1"
    	 
    	android:gravity="center_vertical"
    	android:layout_centerVertical="true">
        
    
    	<TextView
    		android:id="@+id/text1"
  			android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    	
    		android:textSize="14dip"
    		android:paddingLeft="6dip" 
    	/>
    	
    	<LinearLayout 
    	    android:id="@+id/ll_ferme"
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_below="@id/text1"
    		android:layout_marginLeft="12dip"
    		android:visibility="gone">
    	    
    	    <ImageView 
        		android:layout_height="23dip"
        		android:layout_width="23dip"
        		android:background="@drawable/shop_close"
        		/>
    	    <TextView
  				android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="13dip"
    			android:text="@string/actuellement_ferme"
    			android:layout_gravity="center_vertical"
    			android:paddingLeft="2dip" 
    		/>
    	    
    	    <TextView
    	        android:id="@+id/tv_openingHour"
  				android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="13dip"
    			android:text="-"
    			android:textStyle="bold"
    			android:textColor="#32A85E"
    			android:layout_gravity="center_vertical"
    			android:paddingLeft="10dip" 
    		/>
    	    
    	</LinearLayout>
    	
    	<LinearLayout 
    	    android:id="@+id/ll_ouvert"
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:layout_below="@id/text1"
    		android:layout_marginLeft="12dip">
    	    
    	    <ImageView 
        		android:layout_height="23dip"
        		android:layout_width="23dip"
        		android:background="@drawable/shop_open"
        		/>
    	    <TextView
  				android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="13dip"
    			android:text="@string/ouvert_jusqua"
    			android:layout_gravity="center_vertical"
    			android:paddingLeft="2dip" 
    		/>
    	    <TextView
    	        android:id="@+id/tv_closingHour"
  				android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textSize="13dip"
    			android:text="-"
    			android:textStyle="bold"
    			android:textColor="#32A85E"
    			android:layout_gravity="center_vertical"
    			android:paddingLeft="10dip" 
    		/>
    	</LinearLayout>
    	
    	
    </RelativeLayout>
    
</RelativeLayout>
    