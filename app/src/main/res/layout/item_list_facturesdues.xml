<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dip"
    android:paddingTop="5dip" >

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_action_info" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv2"
        android:layout_toRightOf="@id/iv1"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
			
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvRSCli"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:paddingLeft="6dip"
                    android:textSize="20dip" />

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:paddingLeft="6dip"
                       
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textSize="20dip" />

                    <TextView
                        android:id="@+id/tvNumCli"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:paddingLeft="6dip"
                        android:textSize="16dip" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvNomCli"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:paddingLeft="6dip"
                    android:textSize="20dip" />

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:paddingLeft="6dip"
                        android:text="Fac : "
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textSize="20dip" />

                    <TextView
                        android:id="@+id/tvNumDoc"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:paddingLeft="6dip"
                        android:textSize="20dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:paddingLeft="6dip"
                        android:text="@string/date_de_cr_ation_"
                        android:textSize="14dip" />

                    <TextView
                        android:id="@+id/tvDateDoc"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:paddingLeft="6dip"
                        android:textStyle="bold"
                        android:textSize="14dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:paddingLeft="6dip"
                        android:text="Date d'échéance"
                        android:textSize="14dip" />

                    <TextView
                        android:id="@+id/tvDateEch"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:paddingLeft="6dip"
                        android:textStyle="bold"
                        android:textSize="14dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:paddingLeft="6dip"
                        android:text="@string/mnt_total_"
                        android:textSize="14dip" />

                    <TextView
                        android:id="@+id/tvMnt"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:paddingLeft="6dip"
                        android:textStyle="bold"
                        android:textSize="14dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:paddingLeft="6dip"
                        android:text="@string/reste_d_"
                        android:textSize="14dip" />

                    <TextView
                        android:id="@+id/tvMntDu"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:paddingLeft="6dip"
                        android:textStyle="bold"
                        android:textSize="14dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>