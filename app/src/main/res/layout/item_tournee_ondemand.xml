<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <ImageView 
        android:id="@+id/iv1"
        android:layout_height="50dip"
        android:layout_width="50dip"
        android:background="@drawable/ic_action_info"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    
    <ImageView 
        android:id="@+id/iv2"
        android:layout_height="50dip"
        android:layout_width="50dip"
        android:background="@drawable/ic_action_info"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    
    
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv1"
    	android:layout_toLeftOf="@id/iv2"
    	android:gravity="center_vertical"
    	android:layout_centerVertical="true">
    	
    	<TextView
    		android:id="@+id/text1"
  			android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:textSize="25dip"
    		android:paddingLeft="6dip" 
    		android:text="Entreprise qqchose cool"/>
    	
    	<TextView
    	    android:id="@+id/text2"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@id/text1"
    	    android:paddingLeft="12dip"
    	    android:text="Stock estimé : -15"
    	    android:textSize="20dip"
    	    android:visibility="gone" />
    	
    	<LinearLayout 
    	    android:id="@+id/ll_1"
    	    android:layout_below="@id/text2"
  			android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal">
    	   
    	    <TextView
    			android:id="@+id/tv_ville"
  				android:layout_width="0px"
  				android:layout_weight="1"
    			android:layout_height="wrap_content"
    			android:textSize="17dip"
    			android:paddingLeft="16dip" 
    			android:text="Ville : Paris"/>
    	    
    	    <TextView
    			android:id="@+id/tv_tel"
  				android:layout_width="0px"
  				android:layout_weight="1"
    			android:layout_height="wrap_content"
    			android:textSize="17dip"
    			android:paddingRight="16dip" 
    			android:text="Tél : 01.02.03.04.05"/>
    	</LinearLayout>
    	
    	<LinearLayout
    	    android:id="@+id/ll_2"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@id/ll_1"
    	    android:orientation="horizontal"
    	    android:visibility="gone" >
    	   
    	    <TextView
    			android:id="@+id/tv_stock_mini"
  				android:layout_width="0px"
  				android:layout_weight="1"
    			android:layout_height="wrap_content"
    			android:textSize="17dip"
    			android:paddingLeft="16dip" 
    			android:text="Stock mini : 10"/>
    	    
    	    <TextView
    			android:id="@+id/tv_consoparsemaine"
  				android:layout_width="0px"
  				android:layout_weight="1"
    			android:layout_height="wrap_content"
    			android:textSize="17dip"
    			android:paddingRight="16dip" 
    			android:text="Consommation / semaine : 8"/>
    	    
    	</LinearLayout>
    	
    	<LinearLayout
    	    android:id="@+id/ll_3"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@id/ll_2"
    	    android:orientation="horizontal"
    	    android:visibility="gone" >
    	   
    	    <TextView
    			android:id="@+id/tv_datelastvis_et_stock"
  				android:layout_width="0px"
  				android:layout_weight="1"
    			android:layout_height="wrap_content"
    			android:textSize="17dip"
    			android:paddingLeft="16dip" 
    			android:text="Dernière visite le : 15/11/2012, avec un stock de 45"/>
    	    
    	    <TextView
    			android:id="@+id/tv_consodepuisdervis"
  				android:layout_width="0px"
  				android:layout_weight="1"
    			android:layout_height="wrap_content"
    			android:textSize="17dip"
    			android:paddingRight="16dip" 
    			android:text="Consommation depuis dernière visite : 560"/>
    	    
    	</LinearLayout>
    	<LinearLayout
    	    android:id="@+id/ll_4"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@id/ll_2"
    	    android:orientation="horizontal"
    	     >
    	   
    	    <TextView
    			android:id="@+id/tv_mntht"
  				android:layout_width="0px"
  				android:layout_weight="1"
    			android:layout_height="wrap_content"
    			android:textSize="17dip"
    			android:paddingLeft="16dip" 
    			android:text="Montant HT de la commande: "/>
    	    
    	  
    	    
    	</LinearLayout>
    </RelativeLayout>
    
</RelativeLayout>
    